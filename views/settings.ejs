<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Housemates App</title>
    <link rel="icon" type="image/ico" href="images/logo.ico"/>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,700,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/dashboard.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
  </head>
  <body>
    <div class="menu">
      <div id="settings">
        <a href="/settings"><img src="images/icon_settings.png" width="50px"></a>
      </div>
      <div id="logout"><a href="/logout">Logout</a></div>
      <div id="username">
        <%= user.first_name %>
      </div> <!-- username -->
      <div id="title">
        <a href="/dashboard">Homies</a>
      </div> <!-- title -->
    </div> <!-- menu -->

    <div class="wrapper">
      <div class="sidebar">
         <a href="/dashboard" class="tooltip" title="DASHBOARD"><img src="images/sidebar-icon_house.png" title=""></a>
        <a href="/chores" class="tooltip" title="CHORES"><img src="images/sidebar-icon_chores.png" title=""></a>
        <a href="/bills" class="tooltip" title="BILLS"><img src="images/sidebar-icon_bills.png" title=""></a>
        <a href="/calendar" class="tooltip" title="CALENDAR"><img src="images/sidebar-icon_cal.png" title=""></a>
        <a href="/grocery" class="tooltip" title="GROCERY"><img src="images/sidebar-icon_grocery.png" title=""></a>
        <a href="/chat" class="tooltip" title="CHAT"><img src="images/sidebar-icon_chat.png" title=""></a>
      </div> <!-- sidebar -->

      
      <div class="content-dash" id="settings">
      <h1> Settings </h1><br>
        <div id="left">
          <h2>Account Info</h2>
          <img src="<%= user.picture %>" width="120px">
          <table>
            <tr>
              <td><b>Name</b> <%= user.name %></td>
            </tr>
            <tr>
              <td><b>Email</b> <%= user.email %></td>
            </tr>
          </table>
          <form class="form" method="get" action="/--">
            <button type="submit" class="btn btn-primary">Edit your profile</button>
          </form>

          <br><br>
          <form class="form" method="get" action="/house_register">
            <button type="submit" class="btn btn-primary">Create a house</button>
          </form>
        </div> <!-- left -->
        <div id="right">
          <table>
            <tr><td><h2>Google</h2></td></tr>
            <tr>
              <td>
                <img id="settings-prof" src="<%= google_user.picture %>"><i><%= google_user.email %></i>
              </td>
              <td><a href="/login-google">Log<%= google_user.log %></a></td>
            </tr>

            <tr><td><br><h2>Venmo</h2></td></tr>
            <tr>
              <td>
                <img id="settings-prof" src="<%= venmo_user.picture %>"><i><%= venmo_user.email %></i>
              </td>
              <td><a href="/login-venmo">Log<%= venmo_user.log %></a></td>
            </tr>
            <tr><td><br><h2>GroupMe</h2></td></tr>
            <tr>
              <td>
                <img id="settings-prof" src="<%= groupme_user.picture %>"><i><%= groupme_user.email %></i>
              </td>
              <td><a href="/login-groupme">Log<%= groupme_user.log %></a></td>
            </tr>
          </table>
        </div> <!-- right -->
        <!-- <form class="form" method="get" action="/auth/google">
          <button type="submit" class="btn btn-primary">Click here to log into Google Calendar</button>
        </form> -->
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

      </div> <!-- content-dash -->
    </div> <!-- wrapper -->
  </body>
</html>
